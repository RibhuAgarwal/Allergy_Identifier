<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout tools:context=".MainActivity2" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="310sp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-15dp"
        app:srcCompat="@drawable/img3" />

    <View android:layout_height="30dp" android:layout_width="match_parent" android:layout_alignParentBottom="true" android:background="#5c75dc"/>

    <View android:layout_height="550dp" android:layout_width="414dp" android:layout_marginTop="250dp" android:id="@+id/rectangle_1" android:background="@drawable/rectangle_1"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="245dp"
        android:fontFamily="cursive"
        android:text="Sign Up"
        android:textColor="#DAA520"
        android:textSize="70dp" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Username"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Password Confirmation"
        android:textColor="@color/white"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/confirmation"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/allergen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextEmailAddress"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Allergens"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allergen"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:fontFamily="cursive"
        android:hint="Gender"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp" />


    -

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gender"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signUP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_number"
            android:layout_marginStart="80dp"
            android:backgroundTint="@color/white"
            android:hint="Sign In"
            android:textColorHint="#5c75dc" />

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:backgroundTint="@color/white"
            android:hint="Sign Up"
            android:textColorHint="#5c75dc" />

    </LinearLayout>

</RelativeLayout>